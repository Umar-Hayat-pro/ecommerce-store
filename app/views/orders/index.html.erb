<h1>
  Your Orders
</h1>
<table class="table">
  <thead>
    <tr>
      <th>
        Order Id
      </th>
      <th>
        Product
      </th>
      <th>
        Quantity
      </th>
      <th>
        Status
      </th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |o| %>
      <tr>
        <td>
          <%= o.id %>
        </td>
        <td>
          <%= o.product.name %>
        </td>
        <td>
          <%= o.quantity %>
        </td>
        <td>
          <%= o.status %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>