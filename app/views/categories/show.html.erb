<div class="row g-4">
  <% @products.each do |product| %>
    <div class="col-md-3">
      <div class="card product-card h-100 border-0 shadow-sm">
        <%= image_tag product.image, class: "card-img-top product-image" if product.image.attached? %>
        <div class="card-body">
          <h5 class="card-title text-truncate"><%= product.name %></h5>
          <p class="card-text text-muted small"><%= @category.name %></p>
          <div class="d-flex justify-content-between align-items-center">
            <span class="price-tag">$<%= number_with_precision(product.price, precision: 2) %></span>
            <%= button_to "Add to Cart", "#", class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
