<div class="row mb-5">
  <div class="col text-center">
    <h2 class="mb-4">Explore Categories</h2>
    <p>Click on a category to view products.</p>
  </div>
</div>

<div class="row justify-content-center g-4 mb-5">
  <% @categories.each do |category| %>
  <div class="col-md-4">
    
    <a href="/category/<%= category.id %>" class="text-decoration-none smooth-scroll">
      <div class="card text-center">
        <% if category.image.attached? %>
          <%= image_tag category.image, class:"card-img-top", alt:"#{category.name}" %>
        <% else %>
          <img src="https://placehold.co/100" alt="Placeholder" class="card-img-top">
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= category.name %></h5>
        </div>
      </div>
    </a>
    </div>
  <% end %>
</div>
     