<div class="row mt-5 h-100 py-5">
  <div class="col-md-3">
    <aside class="bg-light p-4 rounded shadow-sm">
      <h4 class="mb-4 border-bottom pb-2">Categories</h4>
      <div class="category-list">
      <% @categories.each do |category| %>
        <%= link_to category_path(category), class: "d-block text-decoration-none py-2 text-dark hover-highlight" do %>
          <%= category.name %>
          <span class="badge bg-secondary float-end"><%= category.products.count %></span>
        <% end %>
      <% end %>
      
      </div>
    </aside>
  </div>


  <div class="col-md-9 py-5">
    <div class="row g-4">
      <% @products.each do |product| %>
        <div class="col-md-3">
          <div class="card product-card h-100 border-0 shadow-sm">
            <%= image_tag product.image, class: "card-img-top product-image" if product.image.attached? %>
            <div class="card-body">
              <h5 class="card-title text-truncate"><%= product.name %></h5>
              <p class="card-text text-muted small"><%= product.category.name %></p>
              <div class="d-flex justify-content-between align-items-center">
                <span class="price-tag">$<%= number_with_precision(product.price, precision: 2) %></span>
                <%= button_to "Add to Cart", "#", class: "btn btn-primary btn-sm" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
  .hover-highlight:hover {
    background-color: #f8f9fa;
    border-radius: 4px;
  }
  
  .product-card {
    transition: transform 0.2s;
  }
  
  .product-card:hover {
    transform: translateY(-5px);
  }
  
  .product-image {
    height: 200px;
    object-fit: cover;
  }
  
  .price-tag {
    font-size: 1.25rem;
    font-weight: bold;
    color: #198754;
  }
  
  .category-list {
    max-height: 400px;
    overflow-y: auto;
  }
</style>
