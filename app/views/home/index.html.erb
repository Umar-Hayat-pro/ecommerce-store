<div class="container-fluid px-0">
  <!-- Hero Section -->
  <div class="hero-section text-center d-flex align-items-center" style="background: url('https://via.placeholder.com/1920x500') no-repeat center center/cover; height: 500px;">
    <div class="container">
      <h1 class="display-3 fw-bold">Welcome to Ecommerce</h1>
      <p class="lead">Your one-stop solution for all your needs</p>
      <a href="#about" class="btn btn-primary btn-lg mt-3">Learn More</a>
    </div>
  </div>
  <!-- About Section -->
  <div id="about" class="container my-5">
    <div class="row">
      <div class="col-md-6">
        <h2>About Us</h2>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin sed orci in nulla luctus vehicula vel non tortor. Fusce nec ex nec eros viverra efficitur.</p>
        <%= link_to 'Read More', about_path, class: "btn btn-outline-primary mt-3" %>
      </div>
      <div class="col-md-6">
        <%= image_tag 'https://placehold.co/1920x500', class: "img-fluid rounded", alt: "About Us" %>
      </div>
    </div>
  </div>
  <!-- Features Section -->
  <div class="container-fluid py-5" style="background-color: #f8f9fa;">
    <div class="container text-center">
      <h2 class="mb-4">Our Features</h2>
      <div class="row">
        <div class="col-md-4">
          <i class="fas fa-shield-alt fa-3x mb-3 text-primary"></i>
          <h5>Secure</h5>
          <p>Top-notch security for your data.</p>
        </div>
        <div class="col-md-4">
          <i class="fas fa-rocket fa-3x mb-3 text-primary"></i>
          <h5>Fast</h5>
          <p>Quick and reliable services.</p>
        </div>
        <div class="col-md-4">
          <i class="fas fa-thumbs-up fa-3x mb-3 text-primary"></i>
          <h5>Trusted</h5>
          <p>Trusted by thousands of customers worldwide.</p>
        </div>
      </div>
    </div>
  </div>
  <!-- Contact Section -->
  <div class="container my-5">
    <div class="text-center">
      <h2>Contact Us</h2>
      <p>We'd love to hear from you!</p>
    </div>
    <form class="mt-4">
      <div class="mb-3">
        <label for="name" class="form-label">Your Name</label>
        <input type="text" class="form-control" id="name" placeholder="Enter your name">
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email Address</label>
        <input type="email" class="form-control" id="email" placeholder="Enter your email">
      </div>
      <div class="mb-3">
        <label for="message" class="form-label">Message</label>
        <textarea class="form-control" id="message" rows="4" placeholder="Enter your message"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Send Message</button>
    </form>
  </div>
</div>
