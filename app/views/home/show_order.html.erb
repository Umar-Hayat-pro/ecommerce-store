<div class="orders-table-container">
  <h3>Your Orders</h3>
  <% if @orders.any? %>
    <table class="orders-table">
      <thead>
        <tr>
          <th>Order ID</th>
          <th>Product Name</th>
          <th>Price</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= item.product.name %></td>
              <td><%= number_to_currency(item.product.price) %></td>
              <td><%= item.created_at.strftime("%B %d, %Y") %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>You have no orders yet.</p>
  <% end %>
</div>
