<div class="category-show">
  <div class="category-header">
    <!-- Category Image -->
    <div class="category-image">
      <% if @admin_category.image.attached? %>
        <%= image_tag @admin_category.image, class: 'category-img'%>
      <% else %>
        <img src="https://placehold.co/100" alt="Placeholder" class="profile-image">
        <% end %>
    </div>

    <!-- Category Name and Description -->
    <div class="category-info">
      <h2 class="category-title"><%= @admin_category.name %></h2>
      <p class="category-description"><%= @admin_category.description %></p>
    </div>
  </div>

  <!-- Products in the Category -->
  <div class="products">
    <h3>Products in this Category</h3>
    <div class="row">
      <% @admin_category.products.each do |product| %>
        <div class="col-md-3 product-card">
          <div class="card">
            <div class="card-img">
              <%#= image_tag product.image, alt: product.name, class: 'product-img' if product.image.attached? %>
            </div>
            <div class="card-body">
              <h4 class="product-name"><%= product.name %></h4>
              <p class="product-price"><%= number_to_currency(product.price) %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
