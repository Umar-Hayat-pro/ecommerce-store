<h1 class="text-center mb-4">Users List</h1>
<% if @tenants.any? %>
  <table class="table table-striped table-bordered table-hover custom-table">
    <thead>
      <tr>
        <th>#</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Created at</th>
        <th>Updated at</th>
      </tr>
    </thead>
    <tbody>
      <% @tenants.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td>
            <%= form_with model: user, url: admin_tenant_path(user), method: :patch, local: true do |f| %>
              <%= f.select :role, options_for_select(["admin", "product_manager", "orders_manager"], user.role), {}, class: "form-control" %>
              <%= f.submit "Update Role", class: "btn btn-success btn-sm" %>
            <% end %>
          </td>
          <td><%= time_ago_in_words(user.created_at) %> ago</td>
          <td><%= time_ago_in_words(user.updated_at) %> ago</td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="text-center">No users available.</p>
<% end %>
