<h1>All Orders</h1>
<table class="table">
  <thead>
    <tr>
      <th>
        Order ID
      </th>
      <th>
        Product
      </th>
      <th>
        Customer
      </th>
      <th>
        Status
      </th>
      <th>
        Actions
      </th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |o| %>
      <tr>
        <td>
          <%=  o.id %>
        </td>
        <td>
          <%= o.product.name %>
        </td>
        <td>
          <%= o.user.email %>
        </td>
        <td>
          <%= o.status %>
        </td>
        <td>
          <%= link_to 'Edit', edit_admin_products_path(o), class:"btn btn-sm btn-warning" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>