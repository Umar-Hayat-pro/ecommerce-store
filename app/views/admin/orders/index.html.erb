<h1>All Orders</h1>
<div class="order-grid">
  <% @orders.each do |order| %>
    <div class="order-card">
      <div class="order-card-header">
        <h3>Order #<%= order.id %></h3>
      </div>
      <div class="order-card-body">
        <p><strong>User:</strong> <%= order.user.email %></p>
        <p><strong>Product:</strong> <%= order.product.name %></p>
        <p><strong>Created At:</strong> <%= order.created_at.strftime('%b %d, %Y') %></p>
      </div>
      <div class="order-card-footer">
        Links are here
        <%#= link_to 'View', admin_order_path(order), class: 'btn' %>
        <%#= link_to 'Edit', edit_admin_order_path(order), class: 'btn' %>
        <%#= link_to 'Delete', admin_order_path(order), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %>
      </div>
    </div>
  <% end %>
</div>
