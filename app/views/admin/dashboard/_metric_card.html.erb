<div class="row mt-3 gx-3">
  <div class="col-md-3 d-flex flex-column justify-content-between bg-light p-3 rounded metric-card">
    <h3 class="text-dark">Users</h3>
    <p class="text-muted">Total Users: <%= User.count %></p>
    <%= link_to "View Users", admin_tenants_path, class: "btn btn-primary" %>
  </div>
  
  <div class="col-md-3 d-flex flex-column justify-content-between bg-light p-3 rounded metric-card">
    <h3 class="text-dark">Products</h3>
    <p class="text-muted">Total Products: <%= Product.count %></p>
    <%= link_to "View Products", admin_products_path, class: "btn btn-primary" %>
  </div>
  
  <div class="col-md-3 d-flex flex-column justify-content-between bg-light p-3 rounded metric-card" >
    <h3 class="text-dark">Category</h3>
    <p class="text-muted">Total Categories: <%= Category.count %></p>
    <%= link_to "View Categories", admin_categories_path, class: "btn btn-primary" %>
  </div>
  
  <div class="col-md-3 d-flex flex-column justify-content-between bg-light p-3 rounded metric-card">
    <h3 class="text-dark">Orders</h3>
    <p class="text-muted">Total Orders: Work in progress <%#= Order.count %></p>
    <%= link_to "View Orders", admin_path, class: "btn btn-primary" %>
  </div>
</div>
