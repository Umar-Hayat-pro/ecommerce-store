<p class="admin-product-notice text-success">
  <%= notice %>
</p>
<div class="admin-product-details">
  <%= render @admin_product %>
</div>
<div class="admin-product-actions">
  <%= link_to "Edit this product", edit_admin_product_path(@admin_product), class: "btn btn-warning btn-sm admin-product-btn-action" %> |
  <%= link_to "Back to products", admin_products_path, class: "btn btn-secondary btn-sm admin-product-btn-action" %> |
  <%= button_to "Destroy this product", [:admin, @admin_product], method: :delete, class: "btn btn-danger btn-sm admin-product-btn-action", data: { confirm: "Are you sure?" } %>
</div>
