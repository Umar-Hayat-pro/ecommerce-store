<div class="sidebar bg-dark text-white">
  <div class="sidebar-header text-center py-3">
    <%= image_tag 'logo.webp', class: 'img-fluid', style:"height:40px; width:auto;" %>
  </div>
  <ul class="nav flex-column">
    <% nav_items = [
      { title: 'Dashboard', icon: 'fas fa-tachometer-alt', href: '#' },
      { title: 'Products', icon: 'fas fa-cogs', href: '#' },
      { title: 'Categories', icon: 'fas fa-th-large', href: '#' },
      { title: 'Orders', icon: 'fas fa-box', href: '#' },
      { title: 'Users', icon: 'fas fa-users', href: '#' }
    ] %>
    <% nav_items.each do |item| %>
      <li class="nav-item">
        <a class="nav-link text-white" href="<%= item[:href] %>" data-bs-toggle="tooltip" data-bs-placement="right" title="<%= item[:title] %>">
          <i class="<%= item[:icon] %>"></i>
        </a>
      </li>
    <% end %>
  </ul>
  <!-- Logout Button -->
  <div class="logout-container text-center mt-auto mb-3">
    <a href="#" class="logout-btn" data-bs-toggle="tooltip" data-bs-placement="right" title="Log Out">
      <i class="fas fa-sign-out-alt"></i>
    </a>
  </div>
</div>
<style>
  /* Custom sidebar styles */
  .sidebar {
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    background-color: #343a40;
    padding-top: 30px;
    box-shadow: 2px 0 10px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
  }

  .sidebar-header h3 {
    font-size: 24px;
    color: #fff;
    font-weight: 600;
    margin: 0;
  }

  .sidebar ul {
    list-style-type: none;
    padding-left: 0;
  }

  .sidebar .nav-item {
    width: 100%;
  }

  .sidebar .nav-link {
    display: block;
    padding: 15px 20px;
    font-size: 18px;
    color: #ddd;
    text-decoration: none;
    border-left: 4px solid transparent;
    transition: background-color 0.3s, border-left 0.3s;
  }

  .sidebar .nav-link:hover {
    background-color: #495057;
    border-left: 4px solid #007bff;
    color: #fff;
  }

  .sidebar .nav-link i {
    margin-right: 10px;
  }

  .logout-container {
    padding: 20px;
  }

  .logout-btn {
    display: inline-block;
    font-size: 18px;
    color: white;
    background-color: black;
    border-radius: 50px;
    text-decoration: none;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
  }

  .logout-btn i {
    margin-right: 8px;
  }

  .logout-btn:hover {
    box-shadow: 0 6px 10px rgba(0, 0, 0, 0.3);
    transform: translateX(5px);
  }

  body {
    margin-left: 250px; /* Sidebar width */
    transition: margin-left 0.3s ease;
  }

  @media (max-width: 768px) {
    .sidebar {
      width: 200px;
    }

    body {
      margin-left: 200px;
    }
  }

  /* For small screens, make the sidebar collapsible */
  @media (max-width: 576px) {
    .sidebar {
      width: 100%;
      height: auto;
      position: relative;
    }

    body {
      margin-left: 0;
    }

    .sidebar .nav-link {
      font-size: 16px;
    }
  }
</style>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
<script>
  // Initialize Bootstrap tooltips
  var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
  tooltipTriggerList.map(function (tooltipTriggerEl) {
    return new bootstrap.Tooltip(tooltipTriggerEl);
  });
</script>